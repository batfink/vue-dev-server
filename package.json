{
  "name": "vue-dev-server",
  "description": "a small development server for building `vue` components",
  "version": "0.1.1",
  "homepage": "https://github.com/paulpflug/",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "license": "MIT",
  "bin": {
    "vue-dev-server": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/paulpflug/vue-dev-server"
  },
  "engines": {
    "node": "*"
  },
  "main": "lib/index.js",
  "dependencies": {
    "chokidar": "^1.4.2",
    "coffee-script": "^1.10.0",
    "commander": "^2.9.0",
    "ip": "^1.1.0",
    "koa": "^1.1.2",
    "koa-sendfile": "^1.1.1",
    "koa-static": "^2.0.0",
    "vue-hot-reload-api": "^1.3.2",
    "vue-router": "^0.7.10",
    "vueify-insert-css": "^1.0.0",
    "webpack": "^1.12.13",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.6.4",
    "webpack-koa-dev-middleware": "^0.1.3",
    "script-runner": "^0.1.4"
  },
  "devDependencies": {
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-plugin-transform-runtime": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-runtime": "^5.8.35",
    "casperjs": "^1.1.0-beta5",
    "coffee-loader": "^0.7.2",
    "css-loader": "^0.23.1",
    "jade": "^1.11.0",
    "phantomjs-prebuilt": "^2.1.4",
    "rimraf": "^2.4.4",
    "script-runner": "^0.1.0",
    "template-html-loader": "0.0.3",
    "vue": "^1.0.16",
    "vue-html-loader": "^1.1.0",
    "vue-loader": "^8.1.1",
    "vue-style-loader": "^1.0.0"
  },
  "keywords": [
    "vue",
    "dev-server",
    "cli"
  ],
  "readmeFilename": "README.md",
  "scripts": {
    "clean": "rimraf lib/ && mkdir lib",
    "prebuild": "npm run clean",
    "build": "coffee --no-header --compile --output lib/ src/*.coffee",
    "watch": "coffee --no-header --compile --watch --output lib/ src/*.coffee",
    "dev": "echo dev && ./index.js --folder test/dev/",
    "test": "run-npm --parallel dev --master \"run-npm 'sleep 1' test:*\"",
    "test:compile": "coffee --compile --output test/ test/*.coffee",
    "test:casperjs": "casperjs --verbose test test/index.js",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish"
  }
}
